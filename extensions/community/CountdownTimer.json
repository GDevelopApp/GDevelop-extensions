              "type": {
                "value": "RemoveTimer"
              },
              "parameters": [
                "player",
                "\"__CountdownTimer.Repeat\""
              ]
            }
          ]
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "Timer"
              },
              "parameters": [
                "player",
                "1",
                "\"__CountdownTimer.Repeat\""
              ]
            }
          ],
          "actions": [
            {
              "type": {
                "value": "ResetTimer"
              },
              "parameters": [
                "player",
                "\"__CountdownTimer.Repeat\""
              ]
            },
            {
              "type": {
                "value": "ModVarScene"
              },
              "parameters": [
                "__CountdownTimer.Clocks[GetArgumentAsString(\"ClockName\")].Time",
                "-",
                "1"
              ]
            }
          ]
        }
      ],
      "parameters": [
        {
          "description": "Clock name",
          "name": "ClockName",
          "type": "string"
        },
        {
          "description": "Allow negative numbers",
          "name": "ZeroNumbers",
          "type": "yesorno"
        }
      ],
      "objectGroups": []
    },
