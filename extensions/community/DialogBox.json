        {
          "fullName": "",
          "functionType": "Action",
          "name": "doStepPreEvents",
          "sentence": "",
          "events": [
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": [
                "let dbbg = eventsFunctionContext.getObjects(\"Object\")[0]._DialogBoxBackGround;\r",
                "if (!dbbg) {return}\r",
                "const BgIndex = runtimeScene.getObjects(dbbg.Bg.name).findIndex(v => v.id === dbbg.Bg.id);\r",
                "const NameIndex = runtimeScene.getObjects(dbbg.Name.name).findIndex(v => v.id === dbbg.Name.id);\r",
                "const TextIndex = runtimeScene.getObjects(dbbg.Text.name).findIndex(v => v.id === dbbg.Text.id);\r",
                "const ImgIndex = runtimeScene.getObjects(dbbg.Img.name).findIndex(v => v.id === dbbg.Img.id);\r",
                "const ArrowIndex = runtimeScene.getObjects(dbbg.Arrow.name).findIndex(v => v.id === dbbg.Arrow.id);\r",
                "if (BgIndex === -1) {console.warn(\"Background not found.\");return;}\r",
                "if (NameIndex === -1) {console.warn(\"Name not found.\");return;}\r",
                "if (TextIndex === -1) {console.warn(\"Text not found.\");return;}\r",
                "if (ImgIndex === -1) {console.warn(\"Image not found.\");return;}\r",
                "if (ArrowIndex === -1) {console.warn(\"Arrow not found.\");return;}\r",
                "const Bg = runtimeScene.getObjects(dbbg.Bg.name)[BgIndex];\r",
                "const Name = runtimeScene.getObjects(dbbg.Name.name)[NameIndex];\r",
                "const Text = runtimeScene.getObjects(dbbg.Text.name)[TextIndex];\r",
                "const Img = runtimeScene.getObjects(dbbg.Img.name)[ImgIndex];\r",
                "const Arrow = runtimeScene.getObjects(dbbg.Arrow.name)[ArrowIndex];\r",
                "\r",
                "if (Bg.getBehavior(\"Tween\").hasFinished(\"_DialogBoxBackGround.OpeningWidth\")) {\r",
                "    Name.hide(false);\r",
                "    Text.hide(false);\r",
                "    Img.hide(false);\r",
                "    dbbg.State = \"Typing\";\r",
                "    Bg.resetTimer(\"_DialogBoxBackGroundInterval\");\r",
                "    Bg.unpauseTimer(\"_DialogBoxBackGroundInterval\");\r",
                "    Bg.getBehavior(\"Tween\").removeTween(\"_DialogBoxBackGround.OpeningWidth\");\r",
                "    Bg.getBehavior(\"Tween\").removeTween(\"_DialogBoxBackGround.OpeningHeight\");\r",
                "    Bg.getBehavior(\"Tween\").removeTween(\"_DialogBoxBackGround.OpeningOpacity\");\r",
                "}\r",
                "if (Bg.getBehavior(\"Tween\").hasFinished(\"_DialogBoxBackGround.ClosingWidth\")) {\r",
                "    Bg.hide(true);\r",
                "    dbbg.State = \"Close\";\r",
                "    Bg.getBehavior(\"Tween\").removeTween(\"_DialogBoxBackGround.ClosingWidth\");\r",
                "    Bg.getBehavior(\"Tween\").removeTween(\"_DialogBoxBackGround.ClosingHeight\");\r",
                "    Bg.getBehavior(\"Tween\").removeTween(\"_DialogBoxBackGround.ClosingOpacity\");\r",
                "}\r",
                "\r",
                "if (dbbg.State == \"Typing\") {\r",
                "    if (Bg.timerElapsedTime(\"_DialogBoxBackGroundInterval\", dbbg.Interval)){\r",
                "        Text.setBBText(dbbg.TextBuffer.substring(0, Text.getBBText().length + 1));\r",
                "        Bg.resetTimer(\"_DialogBoxBackGroundInterval\");\r",
                "        if (dbbg.Se) {\r",
                "            dbbg.Se.play();\r",
                "        }\r",
                "        if (dbbg.TextBuffer.length <= Text.getBBText().length) {\r",
                "            Bg.pauseTimer(\"_DialogBoxBackGroundInterval\");\r",
                "            Arrow.hide(false);\r",
                "            dbbg.State = \"Open\";\r",
                "        }\r",
                "    }\r",
                "}\r",
                "\r",
                "if (dbbg.CntFlag) {\r",
                "    dbbg.Cnt++;\r",
                "    dbbg.CntFlag = false;\r",
                "}"
              ],
              "parameterObjects": "",
              "useStrict": true,
              "eventsSheetExpanded": true
            }
