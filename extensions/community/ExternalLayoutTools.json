            "g": 0,
            "r": 0,
            "textB": 255,
            "textG": 255,
            "textR": 255
          },
          "comment": "Gets the variable name and sets the object variable to the external layout ID."
        },
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "ObjectVariableAsBoolean"
              },
              "parameters": [
                "LayoutGroup",
                "__ExternalLayoutTools.NotExternal",
                ""
              ]
            },
            {
              "type": {
                "value": "CompareArgumentAsString"
              },
              "parameters": [
                "\"Variable\"",
                "!=",
                "\"\""
              ]
            }
          ],
          "actions": [],
          "events": [
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": [
                "const ObjectVariable = eventsFunctionContext.getArgument(\"Variable\");",
                "const ID = eventsFunctionContext.getArgument(\"ID\")",
                "var i;",
                "for(let i=0;i<objects.length;i++){",
                "    objects[i].getVariables().get(ObjectVariable).setNumber(ID);",
                "}"
              ],
              "parameterObjects": "LayoutGroup",
              "useStrict": true,
              "eventsSheetExpanded": false
            }
          ]
        }
      ],
