{
  "author": "",
  "category": "User interface",
  "extensionNamespace": "",
  "fullName": "Toast",
  "helpPath": "",
  "iconUrl": "data:image/svg+xml;base64,",
  "name": "Toast",
  "previewIconUrl": "https://asset-resources.gdevelop.io/public-resources/Icons/7643eaa555af597774fddd2ef62d161c1cb39490fdb0bf3a548ee5ed212fb096_toaster.svg",
  "shortDescription": "Provide a simple feedback about an operation in a small pop-up.",
  "version": "1.0.0",
  "description": [
    "Actions to show/hide a toast (short text inside transparent rounded box).",
    "This will work for Android and iOS exports."
  ],
  "tags": [
    "toast",
    "alert",
    "dialog",
    "mobile",
    "message"
  ],
  "authorIds": [
    "lj8txSYs8QPfahnyD8MFO4XvMv02"
  ],
  "dependencies": [
    {
      "exportName": "cordova-plugin-x-toast",
      "name": "toast",
      "type": "cordova",
      "version": "2.7.3"
    }
  ],
  "globalVariables": [],
  "sceneVariables": [],
  "eventsFunctions": [
    {
      "description": "Displays a message for seconds in a transparent rounded box.",
      "fullName": "Show a toast",
      "functionType": "Action",
      "name": "Show",
      "sentence": "Show a _PARAM2_ toast at the _PARAM3_ with message: _PARAM1_",
      "events": [
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "SystemInfo::IsNativeMobileApp"
              },
              "parameters": []
            }
          ],
          "actions": [],
          "events": [
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": [
                "const message = eventsFunctionContext.getArgument(\"Message\");",
                "const duration = eventsFunctionContext.getArgument(\"Duration\");",
                "const position = eventsFunctionContext.getArgument(\"Position\");",
                "",
                "window.plugins.toast.show(message, duration, position);"
              ],
              "parameterObjects": "",
              "useStrict": true,
              "eventsSheetExpanded": false
            }
          ]
        }
      ],
      "parameters": [
        {
          "description": "Message",
          "longDescription": "To ensure that the entire message is displayed, please make the message as short as possible.",
          "name": "Message",
          "type": "string"
        },
        {
          "description": "Duration",
          "longDescription": "Long toast stays for 5 seconds.\nShort toast stays for 3 seconds.",
          "name": "Duration",
          "supplementaryInformation": "[\"long\",\"short\"]",
          "type": "stringWithSelector"
        },
        {
          "description": "Position",
          "longDescription": "Some devices ignore the position and show it at the bottom.",
          "name": "Position",
          "supplementaryInformation": "[\"bottom\",\"center\",\"top\"]",
          "type": "stringWithSelector"
        }
      ],
      "objectGroups": []
    },
    {
      "description": "Hide any displayed toast.",
      "fullName": "Hide a toast",
      "functionType": "Action",
      "name": "Hide",
      "sentence": "Hide the toast",
      "events": [
        {
          "type": "BuiltinCommonInstructions::Standard",
          "conditions": [
            {
              "type": {
                "value": "SystemInfo::IsNativeMobileApp"
              },
              "parameters": []
            }
          ],
          "actions": [],
          "events": [
            {
              "type": "BuiltinCommonInstructions::JsCode",
              "inlineCode": "window.plugins.toast.hide()",
              "parameterObjects": "",
              "useStrict": true,
              "eventsSheetExpanded": false
            }
          ]
        }
      ],
      "parameters": [],
      "objectGroups": []
    }
  ],
  "eventsBasedBehaviors": [],
  "eventsBasedObjects": []
}