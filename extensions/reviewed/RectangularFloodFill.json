          "type": "expression"
        },
        {
          "description": "Space between rows (pixels)",
          "name": "SpaceBetweenRows",
          "type": "expression"
        },
        {
          "description": "Layer",
          "name": "Layer",
          "type": "layer"
        },
        {
          "description": "Z order",
          "name": "Zorder",
          "type": "expression"
        }
      ],
      "objectGroups": []
