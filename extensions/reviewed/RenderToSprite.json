  "eventsFunctions": [
    {
      "fullName": "",
      "functionType": "Action",
      "name": "onFirstSceneLoaded",
      "sentence": "",
      "events": [
        {
          "type": "BuiltinCommonInstructions::JsCode",
          "inlineCode": [
            "gdjs._renderToSprite = {};",
            "gdjs._renderToSprite.rt = PIXI.RenderTexture.create({ width: 100, height: 100 });",
            "gdjs._renderToSprite.sprite = PIXI.Sprite.from(gdjs._renderToSprite.rt);",
            "gdjs._snapshotCanvas = document.createElement('canvas');",
            "gdjs._snapshotThreeRenderer = new THREE.WebGLRenderer({",
            "    canvas: gdjs._snapshotCanvas,",
            "    antialias:",
            "        runtimeScene.getGame().getAntialiasingMode() !== 'none' &&",
            "        (runtimeScene.getGame().isAntialisingEnabledOnMobile() || !gdjs.evtTools.common.isMobile())",
            "});",
            "gdjs._snapshotThreeRenderer.autoClear = false;",
            "gdjs._snapshotThreeRenderer.setSize(100, 100);",
            "gdjs._snapshotPixiRenderer = new PIXI.Renderer({",
            "    width: 100,",
            "    height: 100,",
            "    view: gdjs._snapshotCanvas,",
            "    // @ts-ignore - reuse the context from Three.js.",
            "    context: gdjs._snapshotThreeRenderer.getContext(),",
            "    clearBeforeRender: false,",
            "    preserveDrawingBuffer: true,",
            "    antialias: false,",
            "    backgroundAlpha: 0",
            "});",
            ""
          ],
          "parameterObjects": "",
          "useStrict": true,
          "eventsSheetExpanded": false
        }
      ],
